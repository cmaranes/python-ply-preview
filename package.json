{
  "name": "python-ply-preview",
  "displayName": "Python PLY Preview",
  "description": "Enhance your debugging experience when working with point cloud data. This extension allows you to seamlessly preview and interact with PLY files and NumPy point clouds directly within the VS Code debugger.",
  "version": "0.0.4",
  "publisher" : "cmaranes",
  "engines": {
    "vscode": "^1.81.0"
  },
  "icon" : "images/icon.png",
  "categories": [
		"Debuggers",
		"Data Science",
		"Visualization"
	],
  "keywords": [
    "python",
    "ply",
    "numpy",
    "open3d",
    "3d",
    "visualization",
    "preview"
  ],
  "repository": {
		"type": "git",
		"url": "https://github.com/cmaranes/python-ply-preview"
	},
  "activationEvents": [
		"onLanguage:python"
	],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  },
  "extensionDependencies": [
    "tatsy.vscode-3d-preview" 
  ]
}
