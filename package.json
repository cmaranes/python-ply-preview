{
  "name": "python-ply-preview",
  "displayName": "python_ply_preview",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
		"onDebugResolve:python"
	],
  "main": "./out/extension.js",
  "contributes": {
		"keybindings": [
			{
				"command": "extension.viewimagepythonopencvdebug",
				"key": "ctrl+alt+q",
				"when": "inDebugMode"
			}
		],
		"configuration": {
			"title": "View Image(Python OpenCV Debug)",
			"properties": {
				"svifpod.usetmppathtosave": {
					"type": "boolean",
					"default": true,
					"description": "Use the system tmp path to save image otherwise use the storage path."
				}
			}
		}
	},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
